<h1>Chirp</h1>

<%= form_for(@post) do |f| %>
  <%= f.text_area :body, placeholder: "what's happening?" %>
  <%= f.submit "Send" %>
<% end %>

<ul class="no-bullets">
  <% @posts.each do |post| %>
    <li class="rounded-box">
      <p><%= post.body %></p>
      <p><%= post.user.handle %> at <%= post.created_at %></p>
    </li>
  <% end %>
</ul>
